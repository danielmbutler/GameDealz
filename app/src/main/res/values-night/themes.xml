<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/AppCyan</item>
        <item name="colorPrimaryVariant">@color/AppMetalicBlack</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/AppWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/AppWhite</item>

        <item name="android:actionBarStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>



        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/AppMetalicGray</item>
        <item name="colorOnPrimary">@color/AppCyan</item>
        <item name="android:background">@color/AppMetalicBlack</item>
        <item name="fontFamily">@font/gaming_font</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!---set Actionbar Text -->

    <style name="ThemeOverlay.ActionBar" parent="AppTheme">
        <item name="fontFamily">@font/gaming_font</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionBarSize">40sp</item>
    </style>

    <!---set Chips Theme -->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
        <item name="android:textColor">@color/txc_chip_state</item>
    </style>

    <!--- Dialog Theme -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/AppMetalicGray</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonsStyle</item>
        <item name="android:textColorPrimary">@color/AppWhite</item>
    </style>
    <style name="MyButtonsStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">

    </style>


    <!--- No ActionBar Theme -->

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/AppCyan</item>
        <item name="colorPrimaryVariant">@color/AppMetalicBlack</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/AppWhite</item>

    </style>

</resources>